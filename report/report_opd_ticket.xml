<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_opd_ticket">
            <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="font-size: 16px !important;">
                            <div class="row form-group">
                                 <div class="col-xs-3">
                                        <span t-field="o.patient_id"/>
                                 </div>

                                <div class="col-xs-4 text-left">
                                        <span t-field="o.name"/>
                                </div>
                                <div class="col-xs-2">

                                </div>
                                <div class="col-xs-4 text-center">
                                        <span t-field="o.date"/>
                                </div>
                            </div>
                            <div class="row">

                            </div>


                                  <div class="row form-group">


                                    <div class="col-xs-6">
                                        <span t-esc="o.patient_name.name"/>
                                    </div>

                                    <div class="col-xs-3 text-left">

                                          <span t-esc="o.age"/>

                                </div>
                                <div class="col-xs-3 text-center">

                                          <span t-esc="o.sex"/>
                                </div>

                                </div>
                                <div class="row">

                                </div>

                                    <div class="row form-group">
                                    <div class="col-xs-10">
                                        <span t-esc="o.address"/>
                                    </div>
                                       <t t-if="o.with_doctor_total>0">
                                           <div class="col-xs-2">
                                        <span t-esc="o.with_doctor_total"/>
                                    </div>
                                       </t>
                                        <t t-if="o.with_doctor_total==0">
                                    <div class="col-xs-2">
                                        <span t-esc="o.total"/>
                                    </div>
                                        </t>
                                </div>
                             <div class="row">

                                </div>

                                <div class="row">
                                    <div class="col-xs-5">
                                        <span t-esc="o.opd_ticket_line_id.name.name"/>
                                    </div>
                                            <div class="col-xs-3" align="left">
                                        Mob: <span t-esc="o.mobile"/>
                                    </div>
                                    <div class="col-xs-4" align="left">
                                        Created by: <span t-esc="o.user_id.name"/>
                                    </div>
                                </div>



                            </div>


                    </t>
<!--                </t>-->
            </t>
        </template>
    </data>
</odoo>