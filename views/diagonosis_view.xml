<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Diagnosis Form View -->
        <record id="diagnosis_form_view" model="ir.ui.view">
            <field name="name">diagnosis.form</field>
            <field name="model">diagnosis</field>
            <field name="arch" type="xml">
                <form string="Diagnosis">
                    <header>
                        <button name="action_blf" string="Test Order" type="object" groups="base.group_user"/>
                        <button name="action_quotation_send" string="Email" type="object" groups="base.group_user"/>
                        <button name="action_cancel" string="Cancel" type="object" groups="base.group_user"/>
                    </header>

                    <sheet>
                        <group>
                            <field name="patient_id"/>
                            <field name="present_date"/>
                            <field name="payment"/>
                            <field name="gender"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="father_name"/>
                            <field name="mother_name"/>
                            <field name="age"/>
                        </group>
                        <notebook>
                            <page string="Address">
                                <group>
                                    <group name="permanent_address">
                                        <field name="p_address"/>
                                    </group>
                                    <group name="current_address">
                                        <field name="per_address"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Contact Information">
                                <group>
                                    <group name="phone_nid">
                                        <field name="phone"/>
                                        <field name="nid"/>
                                    </group>
                                    <group name="email">
                                        <field name="email"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Diagnosis Action -->
        <record id="diagnosis_action" model="ir.actions.act_window">
            <field name="name">Diagnosis</field>
            <field name="res_model">diagnosis</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <!-- Diagnosis Tree View -->
        <record id="diagnosis_tree_view" model="ir.ui.view">
            <field name="name">diagnosis.tree</field>
            <field name="model">diagnosis</field>
            <field name="arch" type="xml">
                <tree string="Diagnosis List">
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="age"/>
                    <field name="phone"/>
                    <field name="nid"/>
                    <field name="gender"/>
                </tree>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem name="Hospital" id="leih_group_menu" parent="leih_menu" sequence="1"/>
        <menuitem name="Diagnosis" id="diagnosis_menu" parent="leih_group_menu" action="diagnosis_action"/>

    </data>
</odoo>
